{
  "name": "lint-my-app",
  "version": "0.0.0-development",
  "homepage": "https://github.com/saiichihashimoto/lint-my-app#readme",
  "bugs": {
    "url": "https://github.com/saiichihashimoto/lint-my-app/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/saiichihashimoto/lint-my-app.git"
  },
  "bin": "bin.sh",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "echo",
      "eslint --report-unused-disable-directives --fix",
      "git add"
    ],
    "package.json": [
      "echo",
      "sort-package-json",
      "git add"
    ],
    "{*.css,*.scss}": [
      "echo",
      "stylelint --fix",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "eslint": "5.13.0",
    "lint-staged": "8.1.3",
    "npm-run-all": "^4.1.5",
    "pkg-ok": "2.3.1",
    "sort-package-json": "1.18.0",
    "stylelint": "^9.10.1"
  },
  "devDependencies": {
    "cz-conventional-changelog": "2.1.0",
    "husky": "1.3.1"
  },
  "peerDependencies": {
    "stylelint": ">=9.10.1"
  }
}
