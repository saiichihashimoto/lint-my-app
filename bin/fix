sort-package-json

eslint --fix --ignore-path .gitignore --ignore-pattern '!.*.js' --report-unused-disable-directives $(npm explore lint-my-app -- node ./addconfig.js eslint) .

stylelint --fix --ignore-path .gitignore $(npm explore lint-my-app -- node ./addconfig.js stylelint) "**/*.css"
stylelint --fix --ignore-path .gitignore $(npm explore lint-my-app -- node ./addconfig.js stylelint) --report-needless-disables "**/*.css"

stylelint --fix --syntax=scss --ignore-path .gitignore $(npm explore lint-my-app -- node ./addconfig.js stylelint) "**/*.scss"
stylelint --fix --syntax=scss --ignore-path .gitignore $(npm explore lint-my-app -- node ./addconfig.js stylelint) --report-needless-disables "**/*.scss"

git ls-files | grep "\.json$" | grep -v package | xargs -I{} fixjson --write "$(pwd)/{}"

git ls-files | grep "\.\(png\|jpeg\|jpg\|gif\|svg\)$" | xargs -I{} imagemin-lint-staged "$(pwd)/{}"
