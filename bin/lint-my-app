if [ -z "$1" ]
then
	sh $(npm explore lint-my-app -- pwd)/bin/lint
	exit $?
elif [ "$1" == "fix" ]
then
	sh $(npm explore lint-my-app -- pwd)/bin/fix
	exit $?
elif [ "$1" == "lint" ]
then
	sh $(npm explore lint-my-app -- pwd)/bin/lint
	exit $?
elif [ "$1" == "staged" ]
then
	sh $(npm explore lint-my-app -- pwd)/bin/staged
	exit $?
fi
